<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <Space
        android:id="@+id/s_befIcon"

        android:layout_width="30dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/shibainu"
        app:layout_constraintTop_toBottomOf="@id/s_befIcon"
        app:layout_constraintLeft_toRightOf="@id/s_befIcon"/>

    <Space
        android:id="@+id/s_aftIcon"

        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"/>

    <TextView
        android:id="@+id/t_welcome"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="Welcome to use RemoCar!"

        app:layout_constraintLeft_toRightOf="@id/s_aftIcon"
        app:layout_constraintTop_toBottomOf="@id/s_aftIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>