<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoteScreen">

    <Space
        android:id="@+id/s_top_l"

        android:layout_width="80dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/b_left"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="L"
        app:layout_constraintLeft_toRightOf="@id/s_top_l"
        app:layout_constraintTop_toBottomOf="@id/s_top_l"/>

    <Space
        android:id="@+id/s_btwLR"

        android:layout_width="30dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@id/b_left"
        app:layout_constraintLeft_toRightOf="@id/b_left"/>

    <Button
        android:id="@+id/b_right"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="R"
        app:layout_constraintLeft_toRightOf="@id/s_btwLR"
        app:layout_constraintBottom_toBottomOf="@id/s_btwLR"/>

    <Space
        android:id="@+id/s_top_r"

        android:layout_width="200dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/b_go"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="前进"
        app:layout_constraintLeft_toLeftOf="@id/s_top_r"
        app:layout_constraintTop_toBottomOf="@id/s_top_r"/>

    <Space
        android:id="@+id/s_btwGB"

        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/b_go"
        app:layout_constraintLeft_toLeftOf="@id/b_go"/>

    <Button
        android:id="@+id/b_back"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="后退"
        app:layout_constraintLeft_toLeftOf="@id/s_btwGB"
        app:layout_constraintTop_toBottomOf="@id/s_btwGB"/>

    <Space
        android:id="@+id/s_barTop"
        android:layout_width="50dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Space
        android:id="@+id/s_bar"

        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/s_barTop"
        app:layout_constraintTop_toBottomOf="@id/s_barTop" />

    <TextView
        android:id="@+id/t_barTittle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小车速度：10%"
        app:layout_constraintLeft_toRightOf="@id/s_bar"
        app:layout_constraintTop_toTopOf="@id/s_bar"/>


    <SeekBar
        android:id="@+id/br_spped"

        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="10"
        android:progress="10"
        app:layout_constraintLeft_toLeftOf="@id/s_bar"
        app:layout_constraintTop_toBottomOf="@id/s_bar"/>

    <TextView
        android:id="@+id/t_lowSpeed"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="低速"
        app:layout_constraintLeft_toLeftOf="@id/br_spped"
        app:layout_constraintTop_toBottomOf="@id/br_spped"/>

    <TextView
        android:id="@+id/t_highSpeed"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高速"
        app:layout_constraintRight_toRightOf="@id/br_spped"
        app:layout_constraintTop_toBottomOf="@id/br_spped"/>

    <Space
        android:id="@+id/s_start"

        android:layout_width="400dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/b_start"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="start"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/s_start"
        app:layout_constraintTop_toBottomOf="@id/s_start"/>

</androidx.constraintlayout.widget.ConstraintLayout>