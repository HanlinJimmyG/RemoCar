<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WebConnection">

    <Space
        android:id="@+id/s_top"

        android:layout_width="50dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/t_tittle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text=" 请输入网络地址以连接小车"

        app:layout_constraintLeft_toRightOf="@id/s_top"
        app:layout_constraintTop_toBottomOf="@id/s_top"/>

    <Space
        android:id="@+id/s_aftTit"

        android:layout_width="50dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/t_tittle"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/t_ServAddr"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15sp"
        android:text="IP地址: "
        app:layout_constraintLeft_toRightOf="@id/s_aftTit"
        app:layout_constraintTop_toBottomOf="@id/s_aftTit"/>

    <EditText
        android:id="@+id/et_ServAddr"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:singleLine="true"
        android:maxLength="15"
        android:hint="小车IP地址 (xxx.xxx.xxx.xxx)"
        app:layout_constraintLeft_toRightOf="@id/t_ServAddr"
        app:layout_constraintTop_toTopOf="@id/t_ServAddr"/>
    <Space
        android:id="@+id/s_blwIp"

        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_ServAddr"/>

    <TextView
        android:id="@+id/t_ServPort"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="端口号: "
        app:layout_constraintRight_toRightOf="@id/t_ServAddr"
        app:layout_constraintTop_toTopOf="@id/et_ServPort"/>

    <EditText
        android:id="@+id/et_ServPort"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:singleLine="true"
        android:maxLength="5"
        android:hint="小车端口号 (5001-65535)"
        app:layout_constraintLeft_toRightOf="@id/t_ServPort"
        app:layout_constraintTop_toBottomOf="@id/s_blwIp"/>

    <Space
        android:id="@+id/s_blwEdit"

        android:layout_width="135dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_ServPort"/>


    <Button
        android:id="@+id/b_connect"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        app:layout_constraintLeft_toRightOf="@id/s_blwEdit"
        app:layout_constraintTop_toBottomOf="@id/s_blwEdit"/>


</androidx.constraintlayout.widget.ConstraintLayout>